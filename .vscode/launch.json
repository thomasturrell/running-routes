{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Plot Route - Bob Graham Round",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/plot_route_from_waypoints.py",
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/src/fell/bob-graham-round/bob-graham-round-waypoints.gpx",
                "--max-waypoints", "60",
                "--snap-threshold", "100.0",
            ]
        },
        {
            "name": "Python Debugger: Fix Summit Waypoints",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/fix_summit_waypoints.py",
            "console": "integratedTerminal",
            "args": [
                "${workspaceFolder}/src/fell/bob-graham-round/bob-graham-round-waypoints.gpx"
            ]
        },
        {
            "name": "Python Debugger: Current File with Arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": "${command:pickArgs}"
        }
    ]
}